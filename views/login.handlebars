<div class="flex items-center justify-center min-h-screen bg-emerald-50">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">Login</h2>
        <form action="/login" method="POST" class="space-y-4">
            <div class="flex flex-col">
                <label for="email" class="text-sm font-medium text-gray-700">Email</label>
                <input type="email" id="email" name="email" placeholder="Digite seu e-mail"
                    class="mt-1 p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
            </div>
            <div class="flex flex-col">
                <label for="senha" class="text-sm font-medium text-gray-700">Senha</label>
                <input type="password" id="senha" name="senha" placeholder="Digite sua senha"
                    class="mt-1 p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
            </div>
            <div>
                <input type="submit" value="Entrar"
                    class="w-full py-2 px-4 bg-purple-500 text-white font-bold rounded-lg hover:bg-purple-600 transition duration-200 cursor-pointer">
            </div>
        </form>
    </div>
</div>
