<div class="min-h-screen bg-emerald-50 flex flex-col items-center px-4 py-6">
    <!-- Título -->
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Lista de Agendamentos</h1>

    <!-- Verificar se há agendamentos -->
    {{#if consultas.length}}
    <div class="w-full max-w-5xl bg-white p-6 rounded-lg shadow-md">
        <table class="w-full border-collapse border border-gray-300">
            <thead>
                <tr class="bg-gray-100 text-left">
                    <th class="border border-gray-300 px-4 py-2">Paciente</th>
                    <th class="border border-gray-300 px-4 py-2">Data/Horário</th>
                    <th class="border border-gray-300 px-4 py-2">Especialidade</th>
                    <th class="border border-gray-300 px-4 py-2">Ações</th>
                </tr>
            </thead>
            <tbody>
                {{#each consultas}}
                <tr class="hover:bg-gray-100">
                    <!-- ID é ocultado, mas mantido no backend -->
                    <td class="hidden">{{id}}</td> <!-- Campo ID oculto visualmente -->

                    <!-- Paciente -->
                    <td class="border border-gray-300 px-4 py-2">{{data.nome}}</td> 
                    
                    <!-- Data e Hora -->
                    <td class="border border-gray-300 px-4 py-2">{{data.datahorario}}</td>
                    
                    <!-- Especialidade -->
                    <td class="border border-gray-300 px-4 py-2">{{data.espmedica}}</td>
                    
                    <!-- Botões de Ação -->
                    <td class="border border-gray-300 px-4 py-2 text-center">
                        <a href="/editarAgendamento/{{id}}" 
                           class="text-blue-500 hover:underline">Editar</a> | 
                        <a href="/deletarAgendamento/{{id}}" 
                           class="text-red-500 hover:underline"
                           onclick="return confirm('Tem certeza que deseja excluir?');">Excluir</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <br>
    <a href="/"
                class="text-sm text-gray-600 hover:text-purple-500 transition duration-200">voltar</a>
    {{else}}
    <!-- Mensagem quando não há agendamentos -->
    <p class="text-gray-600 text-lg">Não há agendamentos registrados.</p>
    {{/if}}
</div>
